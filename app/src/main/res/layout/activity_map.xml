<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMarkHole"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        tools:context=".MapsActivity" />


    <Button
        android:id="@+id/btnMarkHole"
        android:layout_width="166dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Marcar Buraco"
        android:textColor="#FFFFFF"
        android:textSize="30sp" /><![CDATA[

    />

    ]]>

    <Button
        android:id="@+id/btnMarkRadar"
        android:layout_width="176dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="52dp"
        android:layout_toEndOf="@+id/btnMarkHole"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Marcar Radar"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>